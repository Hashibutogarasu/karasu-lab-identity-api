rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(authorId) {
      return isAuthenticated() && request.auth.uid == authorId;
    }

    function isPublished(resource) {
      return resource.data.status == 'published';
    }

    match /blogs/{blogId} {
      allow read: if isPublished(resource) || isOwner(resource.data.authorId);
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.authorId) && !resource.data.locked;
    }

    match /attachments/{attachmentId} {
      allow read: if isPublished(resource) || isOwner(resource.data.authorId);
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.authorId);
    }
  }
}
