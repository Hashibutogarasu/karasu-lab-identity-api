{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"assets": [
			{ "include": "i18n/locales/*.json", "watchAssets": true },
			{ "include": "**/*.node", "outDir": "dist/src" }
		],
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": false
				}
			}
		]
	}
}
