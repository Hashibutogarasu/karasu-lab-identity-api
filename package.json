{
  "name": "karasu-lab-identity-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk",
    "test:e2e": "vitest run --config ./vitest.config.ts",
    "lint": "eslint --ignore-path .gitignore './**/*.{js,ts}'",
    "lint:fix": "eslint --ignore-path .gitignore './**/*.{js,ts}' --fix",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,ts,json}'",
    "prisma:generate": "npx @better-auth/cli@latest generate",
    "prisma:migrate": "npx @better-auth/cli@latest migrate",
    "prisma:pull": "npx prisma db pull"
  },
  "dependencies": {
    "@karasu-lab/common": "github:Hashibutogarasu/karasu-lab-api-common",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.1",
    "@prisma/client": "^6.19.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@simplewebauthn/server": "^13.2.2",
    "@thallesp/nestjs-better-auth": "^2.1.0",
    "better-auth": "^1.3.34",
    "cross-env": "^10.1.0",
    "cuid": "^3.0.0",
    "dotenv": "^17.2.3",
    "i18next": "^25.8.13",
    "jest-mock-extended": "^4.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.4.2",
    "rxjs": "^7.8.1",
    "vitest-mock-extended": "^3.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "better-sqlite3": "^12.6.2",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.0.0",
    "nest-prettier": "^0.0.4",
    "prettier": "^3.8.1",
    "prisma": "^6.19.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.18"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "sourceRoot": "src",
          "printWidth": 100,
          "tabWidth": 2,
          "useTabs": true,
          "semi": true,
          "singleQuote": true,
          "quoteProps": "preserve",
          "trailComma": "es5",
          "bracketSpacing": true,
          "arrowParens": "always",
          "requirePragma": true,
          "insertPragma": true
        }
      ]
    }
  }
}
